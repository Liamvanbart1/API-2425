{% layout "server/layouts/base.liquid" %}

{% block content %}
<div class="hero-container">
  <div class="hero">
    <ul>
      <li><p>WELCOME TO</p></li>
      <li><h1>{{ title }}</h1></li>
      <li><p>Are you ready to test your football knowledge?</p></li>
    </ul>
    <img src="/images/arsenal.jpg" alt="Arsenal" class="hero-image">
  </div>
  <div>
    <ul class="grid">
      {% for league in leagues %}
      {% render "../components/card/card.liquid", league: league %}
      {% endfor %}
    </ul>
  </div>
    <div class="scoreboard">
      <h2>Top Scores</h2>
      <ul>
        {% for score in topScores %}
        <li>
          <span class="username">{{ score.userId }}</span> -
          <span class="score">{{ score.score }} points</span>
          {% comment %} <span class="score">{{ score.date }} points</span> {% endcomment %}
        </li>
        {% endfor %}
      </ul>
    </div>
</div>
{% endblock %}
