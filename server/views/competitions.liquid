{% layout "server/layouts/base.liquid" %}

{% block content %}
<h1>{{ title }}</h1>

<ul class="grid">
  {% for item in items %}
  <li class="card">
    <h2>#{{ item.rank }} - {{ item.team.name }}</h2>
    <p>Points: {{ item.points }}</p>
    <p>Played: {{ item.all.played }}</p>
    <p>Wins: {{ item.all.win }}</p>
    <p>Losses: {{ item.all.lose }}</p>
    <p>Draws: {{ item.all.draw }}</p>
  </li>
  {% endfor %}
</ul>

<hr>

<h2>Quiz Time!</h2>
<form method="POST" action="/quiz/check">
  {% for q in quiz %}
  <div class="card">
    <p><strong>Q{{ forloop.index }}: {{ q.question }}</strong></p>
    {% for choice in q.choices %}
    <label>
      <input type="radio" name="q{{ forloop.index }}" value="{{ choice.key }}" required>
      {{ choice.key }}. {{ choice.value }}
    </label><br>
    {% endfor %}
  </div>
  {% endfor %}
  <button type="submit">Check Answers</button>
</form>
{% endblock %}
